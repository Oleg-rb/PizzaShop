<h2>Your cart</h2>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>

  <tbody>

  <% total_qty = 0 %>
  <% total_price = 0 %>

  <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_qty += item[1].to_i %>
 	<% total_price += item[0].price * item[1].to_i %>
  <% end %>

	<tr style="background: yellow;">
	    <td><strong>Total:</strong></td>
	    <td><%= total_price %> rub</td>
	    <td><%= total_qty %></td>
	</tr>

  </tbody>
</table>

<br />
<br />
<form action="/place_order" method="POST" role="form">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>" />

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

   <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control ccc" placeholder="Your phone" >
  </div>

   <div class="form-group">
    <label>Delivery Address</label>
    <textarea name="order[address]" class="form-control" placeholder="Delivery address"></textarea>
  </div>

  <button type="submit" class="btn btn-primary btn-lg">Place this order!</button>
  <br />
  <br />

</form>
