<h2>Your cart</h2>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>

  <tbody>

  <% total_qty = 0 %>
  <% total_price = 0 %>

  <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_qty += item[1].to_i %>
 	<% total_price += item[0].price * item[1].to_i %>
  <% end %>

	<tr style="background: yellow;">
	    <td><strong>Total:</strong></td>
	    <td><%= total_price %> rub</td>
	    <td><%= total_qty %></td>
	</tr>

  </tbody>
</table>
